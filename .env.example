# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
# For local development, use a local PostgreSQL instance
# For production (Linode), update with your production database URL
DATABASE_URL="postgresql://username:password@localhost:5432/velvet_key_db?schema=public"

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://172.233.140.74

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (for future use)
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your-api-key
# EMAIL_FROM=noreply@velvetkey.com

# Age Verification (for future integration)
# VERIFICATION_PROVIDER=stripe_identity
# VERIFICATION_API_KEY=your-api-key
