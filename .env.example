# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
# For local development, use a local PostgreSQL instance
# For production (Linode), update with your production database URL
DATABASE_URL="postgresql://username:password@localhost:5432/velvet_key_db?schema=public"

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://172.233.140.74

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (for future use)
# EMAIL_SERVICE=mailgun
# EMAIL_API_KEY=your-api-key
# EMAIL_FROM=noreply@velvetkey.com

# Age Verification (for future integration)
# VERIFICATION_PROVIDER=stripe_identity
# VERIFICATION_API_KEY=your-api-key
